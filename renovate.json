{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": ["apps/base/default/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["linuxserver/prowlarr"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d{1,3})?$"  // to prevent stuff like 1.8.1259
    },
    {
      "matchPackageNames": ["linuxserver/healthchecks"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d{1,3})?$"  // to prevent stuff like 2.8.20230411
    },
    {
      "matchPackageNames": ["tuetenk0pp/sharelatex-full"],
      "allowedVersions": "/^3\\.1\\.[0-9]+(\\.[0-9]+)?$/"
    }
  ]
}
